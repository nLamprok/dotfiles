[user]
    name = Matthieu Petiteau
    email = mpetiteau.pro@gmail.com

[core]
    autocrlf = input
    editor = vim

[diff]
    tool = vimdiff
    noprefix = true
    algorithm = patience
    renames = copies

[merge]
    tool = vimdiff

[push]
    default = simple

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = magenta

[url "https://github.com/"]
    insteadOf = gh:

[url "https://gist.github.com/"]
    insteadOf = gist:

[alias]
    plog = log --pretty=custom

# https://github.com/alrra/dotfiles/blob/master/src/git/gitconfig
[pretty]
    custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
